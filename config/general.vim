" GENERAL
" Disable vi compatibility
set nocompatible

" Set paths
set runtimepath=~/.vim,$VIM/vimfiles,$VIMRUNTIME,$VIM/vimfiles/after,~/.vim/after

" Swap file path
set directory=~/.vim/tmp/swap

" Don't use internal speaker to beep, nor the visual bell
set visualbell
set t_vb=

" Allow modelines (vim conf in the file as comment)
set modeline

" Allow hidden buffers
set hidden
