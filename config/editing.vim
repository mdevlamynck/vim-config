" EDITING
" Keep same indent when creating a new line
set autoindent
set smartindent

" Don't replace tabs with white spaces
set noexpandtab

" Enable the usage of ~ as an operator
"set tildeop

" OmniCompletion
"set ofu=syntaxcomplete#Complete

" Undo
set undodir=~/.vim/tmp/undo/
set undofile
set history=100
set undolevels=100
